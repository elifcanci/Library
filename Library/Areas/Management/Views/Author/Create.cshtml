@model Author
@{
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add New Author Page</h3>
<form method="post" asp-controller="Author" asp-area="Management" asp-action="Create">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>