@model BookType
@{
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add New Book Type Page</h3>
<form method="post" asp-controller="BookType" asp-area="Management" asp-action="Create">
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>