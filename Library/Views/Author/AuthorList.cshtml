@model List<Author>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Author List Page</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i + 1)</th>
                <td>@Model[i].FirstName</td>
                <td>@Model[i].LastName</td>
            </tr>
        }
    </tbody>
</table>
