@using Microsoft.AspNetCore.Mvc.Localization
@model List<Book>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "BookList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Book List Page</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>@Localizer["Name"]</th>
            <th>@Localizer["PageCount"]</th>
            <th>@Localizer["Author"]</th>
            <th>@Localizer["BookType"]</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i+1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].PageCount</td>
                <td>@(Model[i].Author.FirstName + " " + Model[i].Author.LastName)</td>
                <td>@Model[i].BookType.Name</td>
            </tr>
        }
    </tbody>
</table>
